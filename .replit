[[workflows.workflow]]
name = "Baileys WhatsApp Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd baileys-service && npm start"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
